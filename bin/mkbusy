#!/bin/bash
COMMIT=${2:-${COMMIT:-master}}
BASE_IMAGE=${BASE_IMAGE:-$(dirname $0)/../images}
BASE_STACK=${BASE_STACK:-$(dirname $0)/../stacks}
TESTS_DIR=${TESTS_DIR:~/tests}

export COMMIT=$COMMIT

up() {
   cd ${BASE_STACK}/mkbusy
   docker stack deploy -c docker-stack.yml $COMMIT
}


down() {
   docker stack rm $COMMIT
}

help() {
 echo usage: mkbusy up | down | run
}

run() {

mkdir -p ~/volume/log/$COMMIT
cd $TESTS_DIR
for APP in $(ls $TESTS)                             
do                                                                                                                                          
        if [ -d $APP ]                              
        then                                                    
                for CASE in $(ls $APP)                                          
                do                                                              
                        if [ -d $APP/$CASE ]                                     
                        then                                                                         
                                LOG_CONSOLE=1 run-suite $APP/$CASE 2>> ~/volume/log/$COMMIT/suite.log | tee -a ~/volume/log/$COMMIT/run.log
                                CLEAN=1 SKIP_ACCOUNT=1 run-test ../EmptyTestCase.php                                                       
                        fi                                                                                                                    
                done                                                                                                                          
        fi                                                                                                                                    
done                                                                                                                                          


}

COMMAND=${1:-help}

case $COMMAND in
    up) up;;
    down) down;;
    run) run;;
    help) help;;
esac

