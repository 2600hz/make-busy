#!/bin/bash
COMMIT=${COMMIT:-"kazoo"}
TESTS_DIR=${TESTS_DIR:-~/tests}
CID=$(docker ps --filter name=^/mb_${COMMIT}_makebusy\\. --format="{{.ID}}")
REEXPORT=""
for var in HUPALL LOG_CONSOLE CLEAN RESTART_PROFILE LOG_EVENTS LOG_ENTITIES SKIP_SOME_RESPONSE_VARS
do
	VALUE=$(eval echo \$$var)
	if [ ! -z $VALUE ]
	then
		REEXPORT="$REEXPORT $var=$VALUE"
	fi
done
docker exec $CID /bin/bash -c "$REEXPORT ./run-case $*"

